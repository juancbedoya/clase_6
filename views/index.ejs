<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="./css/bootstrap.css">
    <title>Document</title>
    <link rel="stylesheet" href=" https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css">
</head>

<body>
    
    <div class="container mt-5">
        <div class="card card-body bg-danger border-info border-2">
            <a href="/create" class="btn btn-outline-info text-white"><i class="fa-solid fa-plus me-1"></i>Nuevo Registro</a>
        </div>
        <table class="table table-success table-striped">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Nombre Usuario</th>
                    <th scope="col">Rol</th>
                    <th scope="col" class="text-center">ACCIONES</th>
                </tr>
            </thead>
            <tbody>
            <% results.forEach(u => {%>
                <tr>
                    <th scope="row"><%= u.id %></th>
                    <td><%= u.user %></td>
                    <td><%= u.rol %></td>
                    <td>
                        <div class="d-flex justify-content-center">
                            <a href="/edit/<%= u.id %>" class="btn btn-outline-primary me-2"><i class="fa-solid fa-pen-to-square"></i>Editar</a>
                            <a href="/delete/<%= u.id %>" class="btn btn-outline-light"><i class="fa-solid fa-trash"></i>Eliminar</a>
                        </div>
                    </td>
                </tr>
            <%  }); %>
        </tbody>
        </table>
    </div>

    <h2><i class='bx bxs-save'></i></h2>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
</body>

</html>